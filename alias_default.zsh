#default hack
alias -g ag='ag -i'
alias -g grep='grep -i'
alias -g nkf='nkf -w -Lu -d -x'
alias -g sudo='sudo -E'

#some more ls aliases
alias -g ls='ls --color=auto   -hFAv'
alias -g ll='ls --color=auto   -hFAv -l'
alias -g  l='ls --color=auto   -hFAv -l -a'
alias    le='ls --color=always -hFAv -l -a|less -N'
